﻿@using Movies.WebUI.Dtos.SerieDtos
@model UpdateSerieDto
@{
    ViewData["Title"] = "UpdateSerie";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Dizi Güncelle</h4>
                <p class="card-description">Formu doldurarak mevcut bir diziyi güncelleyebilirsiniz.</p>
                <form class="forms-sample" method="post" asp-action="UpdateSerie">
                    <input type="hidden" asp-for="SerieId" />
                    <div class="form-group">
                        <label for="SerieName">Dizi Adı</label>
                        <input type="text" class="form-control" asp-for="SerieName" placeholder="Dizi adı giriniz" />
                    </div>
                    <div class="form-group">
                        <label for="SerieImageUrl">Resim URL</label>
                        <input type="text" class="form-control" asp-for="SerieImageUrl" placeholder="Resim URL'si giriniz" />
                    </div>
                    <div class="form-group">
                        <label for="SerieDescription">Açıklama</label>
                        <textarea class="form-control" asp-for="SerieDescription" placeholder="Dizi açıklaması giriniz"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="SerieScore">Puan</label>
                        <input type="text" class="form-control" asp-for="SerieScore" placeholder="Dizi puanı giriniz" />
                    </div>
                    <div class="form-group">
                        <label for="SerieCreatedDate">Oluşturulma Tarihi</label>
                        <input type="text" class="form-control" asp-for="SerieCreatedDate" />
                    </div>
                    <div class="form-group">
                        <label for="CategoryId">Kategori</label>
                        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.categorys">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <a href="/AdminSerie/SerieList" class="btn btn-dark">Vazgeç</a>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-group label {
        font-weight: bold;
    }
</style>