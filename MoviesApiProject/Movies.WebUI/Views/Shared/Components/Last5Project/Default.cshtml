﻿@using Movies.WebUI.Dtos.MovieDtos
@model List<ResultMovieDto>

<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">En Beğenilen 6 İçerik</h4>
                <p class="text-muted mb-1">Liste</p>
            </div>
            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-12">
                        <div class="preview-list">

                            <div class="preview-item border-bottom">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-primary">
                                        <img src="@item.movieImageUrl" />
                                    </div>
                                </div>
                                <div class="preview-item-content d-sm-flex flex-grow">
                                    <div class="flex-grow">
                                        <h6 class="preview-subject">@item.movieName</h6>
                                        <p class="text-muted mb-0">@item.movieScore Score</p>
                                    </div>
                                    <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                        <p class="text-muted">18 Gün Önce</p>
                                        <p class="text-muted mb-0">Yüksek Beğeni</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
