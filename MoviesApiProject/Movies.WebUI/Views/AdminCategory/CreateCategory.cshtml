﻿@using Movies.DtoLayer.CategoryDtos
@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Kategori Ekle</h4>
                <p class="card-description"> Formu doldurarak yeni bir kategori ekleyebilirsiniz. </p>
                <form class="forms-sample" method="post" asp-action="CreateCategory">
                    <div class="form-group">
                        <label for="CategoryName">Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori adı giriniz" />
                    </div>
                    <div class="form-group">
                        <label for="ImageUrl">Resim URL</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim URL'si giriniz" />
                    </div>
                    <div class="form-group">
                        <label for="Title">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık giriniz" />
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kategori Ekle</button>
                    <a href="/AdminCategory/CategoryList" class="btn btn-dark">Vazgeç</a>
                </form>
            </div>
        </div>
    </div>
</div>