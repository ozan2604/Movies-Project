﻿@using Movies.WebUI.Dtos.CategoryDtos
@model List<ResultCategoryWithMovieDto>
@{
    ViewData["Title"] = "CategorysWithMovies";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">

            <div class="category-header d-flex align-items-center mb-4">

                <h3 class="category-title ms-3">@Model.FirstOrDefault()?.categoryName - Kategori Filmleri</h3>
            </div>

            <!-- Ürünler Listesi -->
            <div class="product-list">
                @foreach (var item in Model)
                {
                    @foreach (var movies in item.movies)
                    {
                        <div class="product-card mb-3">
                            <div class="product-info d-flex flex-column align-items-center">
                                <img src="@movies.MovieImageUrl" alt="@movies.MovieName" class="product-image" />
                                <h6 class="product-name mt-2">@movies.MovieName</h6>
                            </div>
                        </div>
                    }
                }
            </div>
            <!-- Geri Dön Butonu -->
            <div class="mb-4">
                <button class="btn btn-secondary" onclick="window.history.back()">Geri Dön</button>
            </div>
            <div class="pagination2">
                <span>1. Sayfa:</span>
                <a class="active" href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
                <a href="#">...</a>
                <a href="#">15</a>
                <a href="#">16</a>
                <a href="#"><i class="ion-arrow-right-b"></i></a>
            </div>
        </div>
    </div>
</div>

<style>
    .category-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .category-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
    }

    .category-title {
        margin-left: 20px;
        font-size: 24px;
        font-weight: bold;
    }

    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Aralıklar */
        justify-content: space-evenly;
    }

    .product-card {
        width: 300px; /* Kart genişliği */
        padding: 15px;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #2c2c2c; /* Koyu arka plan */
        color: white; /* Yazı rengi */
    }

        .product-card:hover {
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            transform: scale(1.05);
            transition: all 0.3s ease-in-out;
        }

    .product-info {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-image {
        width: 220px; /* Daha geniş */
        height: 300px; /* Daha uzun dikdörtgen */
        object-fit: cover;
        border-radius: 5px;
    }

    .product-name {
        margin-top: 10px;
        font-size: 18px;
        font-weight: 600;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        max-width: 100%;
    }

    .mb-4 {
        text-align: left;
    }
</style>



