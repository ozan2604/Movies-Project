@using Movies.WebUI.Dtos.CategoryDtos
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Kategori Ekle</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> KATEGORİ </th>
                                <th> KATEGORİ DÜZENLE  </th>
                                <th> KATEGORİ SİL </th>
                                <th> KATEGORİ DETAY </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>
                                        @count
                                    </th>
                                    <td> @item.CategoryName </td>

                                    <td> <a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-outline-warning btn-fw">Düzenle</a> </td>
                                    <td> <a href="@Url.Action("DeleteCategory", "AdminCategory", new { id = item.CategoryId })" class="btn btn-outline-danger btn-fw">Sil</a> </td>
                                    <td>
                                        <a href="/AdminCategory/CategorysWithMovies/@item.CategoryId" class="btn btn-outline-primary btn-fw">Filmleri Gör</a>
                                        <a href="/AdminCategory/CategorysWithSeries/@item.CategoryId" class="btn btn-outline-primary btn-fw">Dizileri Gör</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <a href="/AdminCategory/CreateCategory" class="btn btn-outline-success btn-fw">Yeni Kategori Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>