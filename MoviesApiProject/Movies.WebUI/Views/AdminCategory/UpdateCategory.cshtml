﻿@using Movies.WebUI.Dtos.CategoryDtos
@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategori Bilgilerini Güncelle</h4>
                <p class="card-description"> Mevcut kategori bilgilerini güncelleyebilirsiniz. </p>
                <form  class="forms-sample" method="post" asp-action="UpdateCategory" >
                    <input type="hidden" class="form-control" asp-for="CategoryId"/>

                    <div class="form-group">
                        <label for="CategoryName">Kategori Adı</label>
                        <input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori adı giriniz" />
                    </div>
                    <div class="form-group">
                        <label for="ImageUrl">Resim URL</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Resim URL'si giriniz" />
                    </div>
                    <div class="form-group">
                        <label for="Title">Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="Başlık giriniz" />
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kategori Güncelle</button>
                    <a href="/AdminCategory/CategoryList" class="btn btn-dark">Vazgeç</a>
                </form>
            </div>
        </div>
    </div>
</div>